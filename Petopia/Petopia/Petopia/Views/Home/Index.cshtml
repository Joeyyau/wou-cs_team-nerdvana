@model Petopia.DAL.PetopiaUser
@{
    ViewBag.Title = "Petopia!";
}
<!-------------------------------------------------------------------------------------->
    <div class="homepage-hero-module">
        <div class="video-container">
            <div class="filter"></div>

            <video autoplay loop muted playsinline
                   src="https://stormy9.github.io/nerdvana/Dog-Lovers.mp4"
                   class="fillWidth" id="splash_video">
            </video>

            <!-------------------- hidden \ for when video can't operate --------------->

            <div class="poster hidden">
                <img src="https://stormy9.github.io/nerdvana/my_Dog-Lovers_01.png"
                        alt="">
            </div><!-- END poster hidden div -->

            <!-------------------------------------------------------------------------->
        </div><!-- video-container div -->
    </div><!-- end homepage-hero-module div -->
    <!--==============================================================================-->
    <!--                                     our content                              -->
    <div class="splash_overlay">

        <h1>Petopia:  in-home pet-care services</h1>
        <h3 class="splash_subtitle">
            love your pet even when you can't be home!
        </h3>
        
        @ViewBag.ZipList;
    
        <!------------------------------------------------------------------------------>

        <h5 class="splash_subtitle" style="margin-left: 45px;">
            find pet care near you!
        </h5>
        <div style="margin-left: 45px;">
            @using (Html.BeginForm("PetCarerSearchResult", "Home", FormMethod.Post))
            {
                <!-- 'action' is where you go when it clicks, but we don't need it now -->
                <form class="splash_search" action="">
                    <div class="form-group splash_form">
                        <!-- TODO: figure out why this won't widen w/CSS -->
                        <!-- aha!  it was the 'came-with' stuff way up top! -->
                        @Html.TextBox("searchZip", null,
                                    new { @class = "form-control splash_search_input",
                                          placeholder = "enter your 5-digit zip code.....",
                                            @pattern="[0-9]{5}" })

                        <!-- thought a custom error message would be helpful 
                            and it is -- but it is also tempremental, haha 
                            figure out maybe sometime -- general format is like:
                            (at)oninvalid="this.setCustomValidity('please use 5-digit zipcode!')"-->
                    </div>

                    <button type="submit" class="our_buttons">
                        Fetch!
                    </button>
                </form>
            }
        </div><!-- end search form/box div -->

        <!------------------------------------------------------------------------------>

        <h5 class="splash_subtitle" style="margin-left: 45px; margin-top: 23px; margin-bottom: 0px;">
            interested in becoming a pet care provider with us?
        </h5>
        <h5 class="splash_subtitle" style="margin-left: 45px; margin-top: 0px;">
            find pet owners near you!
        </h5>

        <div style="margin-left: 45px;">
            @using (Html.BeginForm("PetOwnerSearchResult", "Home", FormMethod.Post))
            {
                <!-- 'action' is where you go when it clicks, but we don't need it now -->
                <form class="splash_search" action="">
                    <div class="form-group splash_form">

                        @Html.TextBox("searchZip", null,
                                    new { @class = "form-control splash_search_input",
                                          placeholder = "enter your 5-digit zip code.....",
                                            @pattern="[0-9]{5}" })
                    </div>

                    <button type="submit" class="our_buttons" >
                        Fetch!
                    </button>
                </form>
            }
        </div><!-- end search form/box div -->

        <!------------------------------------------------------------------------------>

        <div class="container-fluid splash_intro_box">
            <div class="container-fluid splash_intro">
                @Html.ActionLink("Find out how Petopia can benefit you:",
                                                            "About", "Home")
                <br />
                as a pet owner -- or become a pet care provider with us!
            </div>
        </div><!-- end intro \ intro_box divs -->

        <!------------------------------------------------------------------------------>

    </div><!-- end splash_overlay div -->

<!-------------------------------------------------------------------------------------->
@section scripts {
    <script type="text/javascript" src="~/Scripts/_our_main.js"></script>
}
<!-------------------------------------------------------------------------------------->